<!-- res/layout/item_home.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/homeImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/home1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/homeDetailsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 BHK, 1200 sqft"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/numPeopleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of People: 2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/rentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rent: $1500/month"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
