<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
tools:context=".MainActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="35dp"
        >

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/menu"/>
        <TextView
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text="HOUSE BRIDGE"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="70dp"/>

        <ImageView
            android:id="@+id/searchBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/searchbtn"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_margin="35dp"
            app:iconifiedByDefault="false"
            android:queryHint="Search homes..." />


        <TextView
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:text="Find The Perfect Home"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginLeft="35dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover the best home for you"
        android:layout_marginLeft="35dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="Recent"
                android:textSize="16dp"
                android:backgroundTint="#E4E4E4"
                android:textColor="#6B000000"
                android:layout_marginLeft="35dp"
                android:textStyle="bold" />


            <com.google.android.material.button.MaterialButton
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="Popular"
                android:textSize="16dp"
                android:backgroundTint="#000000"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"/>



            <com.google.android.material.button.MaterialButton
                android:id="@+id/filterButton"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="Filter"
                android:textSize="16sp"
                android:backgroundTint="#E4E4E4"
                android:textColor="#6B000000"
                android:layout_marginLeft="15dp"
                android:textStyle="bold" />

        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="300dp"
                    android:layout_height="400dp"
                    android:src="@drawable/home1"
                    android:scaleType="fitXY"
                    android:transitionName="scalebig"/>
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Urban \nApartment"
                        android:textSize="30dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹10,000"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="45dp"
                        android:layout_marginLeft="220dp"/>

                </RelativeLayout>


            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>


            <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="300dp"
                    android:layout_height="400dp"
                    android:src="@drawable/home2"
                    android:scaleType="fitXY"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Urban \nApartment"
                        android:textSize="30dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$₹12,000"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="45dp"
                        android:layout_marginLeft="210dp"/>

                </RelativeLayout>


            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>


            <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="300dp"
                    android:layout_height="400dp"
                    android:src="@drawable/home3"
                    android:transitionName="scalebig"
                    android:scaleType="fitXY"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Urban \nApartment"
                        android:textSize="30dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹15,000"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="45dp"
                        android:layout_marginLeft="220dp"/>

                </RelativeLayout>


            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>


        </LinearLayout>
    </HorizontalScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/radius"
                android:backgroundTint="@color/black"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/home" />

<!--                <ImageView-->

<!--                    android:layout_width="40dp"-->
<!--                    android:layout_height="40dp"-->
<!--                    android:layout_margin="10dp"-->
<!--                    android:src="@drawable/location" />-->
                <ImageView
                    android:id="@+id/imageViewChatBot2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/chat"
                    android:contentDescription="Chat Bot Icon" />
                <ImageView
                    android:id="@+id/imgMessage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/message" />

<!--                <ImageView-->
<!--                    android:layout_width="40dp"-->
<!--                    android:layout_height="40dp"-->
<!--                    android:layout_margin="10dp"-->
<!--                    android:src="@drawable/chat" />-->
                <ImageView
                    android:id="@+id/imageViewChatBot"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/chat"
                    android:contentDescription="Chat Bot Icon" />


                <ImageView
                    android:id="@+id/loginButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/account" />
            </LinearLayout>

        </RelativeLayout>



    </LinearLayout>

</ScrollView>
<com.google.android.material.navigation.NavigationView
android:id="@+id/navigation_view"
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:layout_gravity="start"
android:background="#FFFFFF"
app:menu="@menu/drawer_menu" />

    </androidx.drawerlayout.widget.DrawerLayout>
