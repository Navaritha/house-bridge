<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RentalAgreementActivity">

    <TextView
        android:id="@+id/rentalAgreementTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rental Agreement"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tenantNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tenant Name:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rentalAgreementTitle" />

    <EditText
        android:id="@+id/tenantName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter tenant's name"
        android:inputType="text"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tenantNameLabel" />

    <TextView
        android:id="@+id/propertyDetailsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Property Details:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tenantName" />

    <EditText
        android:id="@+id/propertyDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter property details"
        android:inputType="text"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/propertyDetailsLabel" />

    <TextView
        android:id="@+id/rentalPeriodLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rental Period:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/propertyDetails" />

    <EditText
        android:id="@+id/rentalPeriod"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter rental period (e.g., 1 year)"
        android:inputType="text"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rentalPeriodLabel" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Agreement"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rentalPeriod" />

</androidx.constraintlayout.widget.ConstraintLayout>
